<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_2x"
    android:paddingEnd="@dimen/spacing_2x">

    <TextView
        android:id="@+id/itemSimpleReactionInfoKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:gravity="center"
        android:lines="1"
        android:textColor="?textPrimary"
        android:textAppearance="?textAppearanceBody1"
        tools:text="@sample/reactions.json/data/reaction" />

    <TextView
        android:id="@+id/itemSimpleReactionInfoMemberName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_weight="1"
        android:textColor="?textPrimary"
        android:textAppearance="?textAppearanceBody1"
        tools:text="@sample/saral.json/data/displayName" />

    <TextView
        android:id="@+id/itemSimpleReactionInfoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="?textSecondary"
        android:textAppearance="?textAppearanceCaption"
        tools:text="10:44" />


</LinearLayout>